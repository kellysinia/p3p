    if (File.Exists(dataFile))
    {
        userData = File.ReadAllLines(dataFile);
        if (userData == null)
        {
            // Empty file.
            result = "Het bestand is leeg.";
        }
    }
    else
    {
        // File does not exist.
        result = "Het bestand bestaat niet.";
    }
    if (result == "")
    {
        var db = Database.Open("studentenoverzicht");
        int tel = 0;
